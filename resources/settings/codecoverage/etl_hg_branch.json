{
	"constants": {
		"mo_http.http.default_headers": {
			"Referer": "https://wiki.mozilla.org/Auto-tools/Projects/ActiveData"
		}
	},
	"hg":{
		"url":"https://hg.mozilla.org",
		"branches":{
			"host": "http://localhost",
			"port": 9200,
			"index": "branches",
			"type": "branch",
			"timeout": 300,
			"debug": false,
			"limit_replicas": true
		},
		"repo":{
			"host": "http://localhost",
			"port": 9200,
			"index": "repo",
			"type": "revision",
			"timeout": 300,
			"debug": false,
			"limit_replicas": true
		}
	},
	"debug": {
		"trace": true,
		"cprofile": {
			"enabled": false,
			"filename": "./results/profile.tab"
		},
		"log": [
			{
				"log_type": "console"
			},
			{
				"log_type": "email",
				"from_address": "active-data-maintainers@mozilla.com",
				"to_address": "active-data-maintainers@mozilla.com",
				"subject": "[ALERT][DEV] Problem reading branches from hg.mozilla.org",
				"$ref": "file://~/codecoverage.json#email"
			}
		]
	}
}
